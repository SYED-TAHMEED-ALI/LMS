@model LMS.Models.Library

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center">Delete Library Item</h1>
    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">Name:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-2">Title:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
                        <dt class="col-sm-2">Author:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>
                        <dt class="col-sm-2">Price:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
                    </dl>
                </div>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
