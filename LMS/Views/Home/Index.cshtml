@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+jXE3xIj808COWNUKWEqF1qj4vAfGC1JXj2N2tN" crossorigin="anonymous">
    <style>
        /* Add custom styles here */
        body {
            background-color: #343a40; /* Dark grey background */
            color: #ffffff; /* White text */
        }
        .container {
            padding-top: 50px;
        }
        .display-4 {
            font-size: 2.5rem;
            font-weight: bold;
        }
        a {
            color: #ffc107; /* Yellow link */
            text-decoration: none;
        }
        a:hover {
            color: #ffcd39; /* Yellow hover color */
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Explore the world of <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a> for your Library Management System.</p>
    </div>
</body>
</html>
